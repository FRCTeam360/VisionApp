package org.usfirst.frc.team360.robot;


import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

import org.usfirst.frc.team360.robot.AdbBridge;

public class RobotServer {
	static AdbBridge bridge;
	 String line;
	 String line2;
	 static Process shell;
	 static BufferedReader bufferedReader_logcat;
	 static BufferedReader bufferedReader2;
	public static void main(String[] args) {
		// TODO Auto-generated method stub
			bridge = new AdbBridge();
			bridge.start();
			shell = bridge.startLogcat("dsa");
			if(shell != null){
				bufferedReader_logcat = new BufferedReader(
		  		new InputStreamReader(shell.getInputStream()));
		  		StringBuilder log=new StringBuilder();
		  		String line = "";
		  		
		  	}	 
			RobotServer r = new RobotServer();
			(new Thread(new LogcatReader())).start();
	}
	public static class LogcatReader extends RobotServer implements Runnable{
		
		public void run() {
			// TODO Auto-generated method stub
			String line1;
			while(true){
				try {
					if((line1 = bufferedReader_logcat.readLine()) != null){
						System.out.println(line1);
						}
				} catch (IOException e) {
					// TODO Auto-generated catch block
					System.out.println(e.toString());
				}
					try {
						Thread.sleep(20);
					} catch (InterruptedException e) {
						// TODO Auto-generated catch block
						e.printStackTrace();
					}
				
			}
		}
	}
}
